<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_check_list__add_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.waterball.life_simulator2.CheckList.CheckList_Add_Activity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:text="項目標題 : "
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleED_checklist"
        android:ems="10"
        android:hint="提示字 標題輸入於此"
        android:layout_toRightOf="@+id/textView1"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:text="時間 : "
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="45dp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateED_checklist"
        android:ems="10"
        android:hint="提示字"
        android:layout_toRightOf="@+id/textView2"
        android:layout_below="@+id/titleED_checklist"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="詳細事件 : "
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contentED_checklist"
        android:ems="10"
        android:hint="提示字 詳細事件輸入於此"
        android:layout_below="@+id/dateED_checklist"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BTNadd_checklist"
        android:layout_centerHorizontal="true"
        android:onClick="onSubmit"
        android:text="新增"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BTNcancel_checklist"
        android:onClick="onSubmit"
        android:text="取消"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>
